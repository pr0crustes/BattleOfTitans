<root>
    <styles>
        <include src="file://{resources}/styles/custom_game/bonus_shop.css"/>
    </styles>

    <scripts>
        <include src="file://{resources}/scripts/utils.js"/>
        <include src="file://{resources}/scripts/custom_game/bonus_shop.js"/>
    </scripts>

    <Panel class="bonus_shop_root">
        <Button id="bonus_shop_button" onactivate="OnBonusShopButtonClick()">
            <Panel class="bonus_shop_icon"/>
        </Button>

        <Panel class="bonus_shop_panel">
            <Panel class="title_panel">
                <Label class="title" text="#bonus_shop_title"/>
            </Panel>

            <Panel class="description_root_panel">

                <Panel class="description_panel">
                    <Label class="description" text="#game_info_objective"/>
                </Panel>

                <Panel class="description_panel">
                    <Label class="description" text="#game_info_loose_condition"/>
                </Panel>

                <Panel class="description_panel">
                    <Panel class="sideway">
                        <Image class="image_icon" src="file://{images}/custom_game/custom_game_info/tombstone.png" />
                        <Label class="description icon_description" text="#game_info_tombstone"/>
                    </Panel>
                </Panel> 

                <Panel class="description_panel">
                    <Panel class="rsideway">
                        <Image class="image_icon" src="file://{images}/custom_game/custom_game_info/gold_bag.png" />
                        <Label class="description icon_description" text="#game_info_drops"/>
                    </Panel>
                </Panel> 

                <Panel class="description_panel">
                    <Panel class="sideway">
                        <Image class="image_icon" src="file://{images}/custom_game/custom_game_info/items.png" />
                        <Label class="description icon_description" text="#game_info_items"/>
                    </Panel>
                </Panel> 

                <Panel class="description_panel">
                    <Panel class="rsideway">
                        <Image class="image_icon" src="file://{images}/custom_game/custom_game_info/survivability.png" />
                        <Label class="description icon_description" text="#game_info_survivability"/>
                    </Panel>
                </Panel>
            </Panel>

            <Panel class="footer_panel">
                <Label class="footer" text="#game_info_footer"/>
            </Panel>

        </Panel>

    </Panel>

</root>
