<root>
    <styles>
        <include src="file://{resources}/styles/custom_game/bonus_shop.css"/>
    </styles>

    <scripts>
        <include src="file://{resources}/scripts/utils.js"/>
        <include src="file://{resources}/scripts/custom_game/bonus_shop.js"/>
    </scripts>

    <Panel class="bonus_shop_root">
        <Button id="bonus_shop_button" onactivate="OnBonusShopButtonClick()">
            <Panel class="bonus_shop_icon"/>
        </Button>

        <Panel class="bonus_shop_panel">
            <Panel class="title_panel">
                <Label class="title" text="#bonus_shop_title"/>
            </Panel>

            <Panel class="bonus_shop_shops">
                <Panel class="bonus_shop_shop_entry" id="buy_health">
                    <Image class="image_icon" src="file://{images}/custom_game/shops/shop_health.png" />
                    <Label class="bonus_shop_cost"/>
                    <Button class="bonus_shop_buy_button" onactivate="BuyHealth()">
                        <Label class="shop_description" text="#bonus_shop_buy"/>
                    </Button>
                </Panel>
            </Panel>
        </Panel>
    </Panel>
</root>
